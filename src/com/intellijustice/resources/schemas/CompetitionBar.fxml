<fx:root fx:id="competitionBar" type="javafx.scene.layout.VBox"
         xmlns:fx="http://javafx.com/fxml" minWidth="90.0" maxHeight="158.0" prefWidth="120.0"
         fx:controller="com.intellijustice.ui.controllers.CompetitionBarController">
    <children>
        <ImageView fx:id="competitionImageView" pickOnBounds="true" preserveRatio="true" smooth="true">
            <image>
                <Image url="@../images/100m-preliminary-round.png" />
            </image>
        </ImageView>

        <Label fx:id="competitionName" text="Competition Name" />
        <Label fx:id="competitionType" text="Competition Type" />
    </children>
    <stylesheets>
        <URL value="@../styles/CompetitionBar.css" />
    </stylesheets>
</fx:root>
