<fx:root fx:id="homeModule" type="javafx.scene.layout.GridPane"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="com.intellijustice.ui.controllers.HomeModuleController">
    <children>
        <ScrollPane fx:id="competitionScrollPane" GridPane.columnIndex="0"
                    GridPane.rowIndex="0" fitToHeight="true" fitToWidth="true"
                    mouseTransparent="true">
            <FlowPane fx:id="competitionList" hgap="40.0" vgap="20.0">
                <padding>
                    <Insets bottom="10.0" left="30.0" right="30.0" top="20.0" />
                </padding>
            </FlowPane>
        </ScrollPane>
    </children>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <stylesheets>
        <URL value="@../styles/HomeModule.css" />
    </stylesheets>
</fx:root>