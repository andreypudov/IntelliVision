<properties>
    <comment>IntelliJustice Intelligent Referee Assistant System</comment>

    <entry key="intellijustice.application.version">0.00.00</entry>

    <entry key="intellijustice.window.visible">true</entry>
    <entry key="intellijustice.window.width">1020.0</entry>
    <entry key="intellijustice.window.height">700.0</entry>

    <entry key="intellijustice.database.driver">com.mysql.jdbc.Driver</entry>
    <entry key="intellijustice.database.url">jdbc:mysql</entry>
    <entry key="intellijustice.database.hostname">localhost</entry>
    <entry key="intellijustice.database.port">3306</entry>
    <entry key="intellijustice.database.database">intellijustice</entry>
    <entry key="intellijustice.database.username"/>
    <entry key="intellijustice.database.password"/>
    <entry key="intellijustice.database.connectTimeout">100</entry>
    <entry key="intellijustice.database.autoReconnect">true</entry>
    <entry key="intellijustice.database.maxReconnects">3</entry>

    <entry key="intellijustice.provider">Excel</entry>
    <entry key="intellijustice.provider.excel.document">${HOME_DIRECTORY}${FILE_SEPARATOR}IntelliJustice.xlsx</entry>

    <entry key="intellijustice.website.url"/>
    <entry key="intellijustice.website.username"/>
    <entry key="intellijustice.website.password"/>

    <entry key="intellijustice.scoreboard.width">560</entry>
    <entry key="intellijustice.scoreboard.height">270</entry>
    <entry key="intellijustice.scoreboard.font.size">12</entry>
    <!-- normal | italic | oblique -->
    <entry key="intellijustice.scoreboard.font.style">normal</entry>
    <!-- normal | bold | bolder | lighter | 100 | 200 | 300 | 400 | 500 | 600 | 700 | 800 | 900 -->
    <entry key="intellijustice.scoreboard.font.weight">normal</entry>
</properties>
