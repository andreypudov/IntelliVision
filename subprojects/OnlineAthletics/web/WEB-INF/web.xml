<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>MySQL_OA_username</param-name>
        <param-value>onlineathletics</param-value>
    </context-param>
    
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    
    <!-- Error page declaration -->
    <error-page>
        <error-code>403</error-code>
        <location>/faces/error403.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/faces/error404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/faces/error404.xhtml</location>
    </error-page>
    
    <!-- login mechanism declaration -->
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>OnlineAthleticsRealm</realm-name>
        <form-login-config>
            <form-login-page>/faces/login.xhtml</form-login-page>
            <form-error-page>/faces/login.xhtml?auth=failed</form-error-page>
        </form-login-config>
    </login-config>
    
    <!-- Secure pages declaration-->
    <security-constraint>
        <display-name>administrator</display-name>
        <web-resource-collection>
            <web-resource-name>administrator</web-resource-name>
            <url-pattern>/mission-control/</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>db_read</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <!-- Security roles declaration -->
    <security-role>
        <role-name>db_read</role-name>
    </security-role>
    <security-role>
        <role-name>db_write</role-name>
    </security-role>
    
    <!-- Application resources declaration -->
    <resource-ref>
        <res-ref-name>jdbc/OnlineAthletics</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    
